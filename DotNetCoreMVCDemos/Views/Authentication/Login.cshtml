    <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
        <div class="card card0 border-0">
            <div class="row d-flex">
                <div class="col-lg-6">
                    <div class="card1 pb-5">
                        <div class="row"> <img src="https://i.imgur.com/CXQmsmF.png" class="logo"> </div>
                        <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="https://images.pexels.com/photos/6146965/pexels-photo-6146965.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=280&w=360" class="image"> </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card2 card border-0 px-4 py-5">
                        <div class="row px-3 mb-4">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">Email Address</h6>
                            </label>
                            @*<input class="mb-4" type="text" name="email" placeholder="Enter a valid email address">*@
                            @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Your Email *" })
                            @Html.ValidationMessageFor(e => e.Email, "", new { @style = "color:red" })
                        </div>
                        <div class="row px-3 mb-4">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">Password</h6>
                            </label>
                            @*<input type="password" name="password" placeholder="Enter password">*@
                            @Html.PasswordFor(e => e.Password, new { id = "password", @class = "form-control", placeholder = "Password *" })
                            <span id="result"></span>
                            @Html.ValidationMessageFor(e => e.Password, "", new { @style = "color:red" })
                        </div>
